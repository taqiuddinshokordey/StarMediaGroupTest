<!-- File: Views/Pages/Home.cshtml -->
@{
    ViewData["Title"] = "Home";
}
<div class="container mt-4">
    <!-- Featured News Carousel -->
    <div id="featuredNewsCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#featuredNewsCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#featuredNewsCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#featuredNewsCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://via.placeholder.com/800x400?text=Breaking+News" class="d-block w-100" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Breaking News: Major Event Happening Now</h5>
                    <p>Details about the major event happening right now.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://via.placeholder.com/800x400?text=Technology+Update" class="d-block w-100" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Latest Update: New Developments in Technology</h5>
                    <p>Insights into the latest developments in the tech world.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://via.placeholder.com/800x400?text=Sports+News" class="d-block w-100" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Sports: Big Win for the Home Team</h5>
                    <p>Highlights from the latest sports event.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#featuredNewsCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#featuredNewsCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Latest News Section -->
    <div class="row mt-5">
        <div class="col-md-8">
            <h2>Latest News</h2>
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/150?text=News+Image+1" class="img-fluid rounded-start" alt="News Image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">News Headline 1</h5>
                            <p class="card-text">Brief description of the news article.</p>
                            <p class="card-text"><small class="text-muted">Posted 10 mins ago</small></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/150?text=News+Image+2" class="img-fluid rounded-start" alt="News Image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">News Headline 2</h5>
                            <p class="card-text">Brief description of the news article.</p>
                            <p class="card-text"><small class="text-muted">Posted 30 mins ago</small></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/150?text=News+Image+3" class="img-fluid rounded-start" alt="News Image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">News Headline 3</h5>
                            <p class="card-text">Brief description of the news article.</p>
                            <p class="card-text"><small class="text-muted">Posted 1 hour ago</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Categories Section -->
        <div class="col-md-4">
            <h2>Categories</h2>
            <ul class="list-group">
                <li class="list-group-item"><a href="#">World</a></li>
                <li class="list-group-item"><a href="#">Technology</a></li>
                <li class="list-group-item"><a href="#">Sports</a></li>
                <li class="list-group-item"><a href="#">Entertainment</a></li>
                <li class="list-group-item"><a href="#">Health</a></li>
            </ul>
        </div>
    </div>

    <!-- Additional Sections -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h2>Editor's Picks</h2>
            <div class="card-deck">
                <div class="card">
                    <img src="https://via.placeholder.com/150?text=Editor's+Pick+1" class="card-img-top" alt="Editor's Pick Image">
                    <div class="card-body">
                        <h5 class="card-title">Editor's Pick 1</h5>
                        <p class="card-text">Brief description of the editor's pick.</p>
                    </div>
                </div>
                <div class="card">
                    <img src="https://via.placeholder.com/150?text=Editor's+Pick+2" class="card-img-top" alt="Editor's Pick Image">
                    <div class="card-body">
                        <h5 class="card-title">Editor's Pick 2</h5>
                        <p class="card-text">Brief description of the editor's pick.</p>
                    </div>
                </div>
                <div class="card">
                    <img src="https://via.placeholder.com/150?text=Editor's+Pick+3" class="card-img-top" alt="Editor's Pick Image">
                    <div class="card-body">
                        <h5 class="card-title">Editor's Pick 3</h5>
                        <p class="card-text">Brief description of the editor's pick.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>